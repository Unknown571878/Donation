<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        layout="@layout/change_handphone_tb" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호 변경"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="현재 휴대폰 번호를 입력해주세요."
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/change_hp_edt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect"
                android:layout_marginTop="20dp"
                android:hint="  현재 휴대폰 번호 "
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="새로운 휴대폰 번호를 입력해주세요."
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/change_hp_edt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  새 휴대폰 번호"
                android:background="@drawable/rect"
                android:layout_marginTop="15dp"
                />
            <EditText
                android:id="@+id/change_hp_edt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  새 휴대폰 번호 확인 "
                android:background="@drawable/rect"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현재 등록된 번호와 다른 번호를 입력해야 합니다."
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:id="@+id/change_hp_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="변경"/>
            <Button
                android:id="@+id/change_hp_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="취소"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
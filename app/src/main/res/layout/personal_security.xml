<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E5E5">
    <include
        layout="@layout/personal_security_tb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="개인 정보 / 보안"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/personal_security_btn1"
            android:layout_width="match_parent"
            android:outlineProvider="none"
            android:layout_height="50dp"
            android:text="@string/personal_security_btn1"
            android:gravity="left|center"
            android:textColor="#000000"
            android:background="#ffffff"
            android:padding="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#E5E5E5"/>
    </LinearLayout>


    <Button
        android:id="@+id/personal_security_btn3"
        android:layout_width="match_parent"
        android:outlineProvider="none"
        android:layout_height="50dp"
        android:text="@string/personal_security_btn3"
        android:gravity="left|center"
        android:textColor="#000000"
        android:background="#ffffff"
        android:padding="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#E5E5E5"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/white" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical"
    >
    <include
        layout="@layout/change_pw_tb" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="#E5E5E5" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="비밀번호 변경"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#0000FF"
                    android:text="현재 비밀번호"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:text="를 입력해주세요."
                    android:textSize="18dp"/>

            </LinearLayout>


            <EditText
                android:id="@+id/change_pw_edt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="   현재 비밀번호"
                android:background="@drawable/rect"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#FF0000"
                    android:text="새 비밀번호"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:text="를 입력해주세요."
                    android:textSize="18dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="(비밀번호는 6자 이상이어야 합니다.)"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/change_pw_edt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   새 비밀번호"
                android:layout_margin="10dp"
                android:background="@drawable/rect"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:id="@+id/change_pw_edt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   새 비밀번호 확인"
                android:layout_margin="10dp"
                android:background="@drawable/rect"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:padding="15dp"
                android:text="안전한 비밀번호 설정 시 계정 보호에 도움이 됩니다."
                android:textSize="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <Button
                    android:id="@+id/change_pw_btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="변경" />

                <Button
                    android:id="@+id/change_pw_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="취소" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_centerInParent="true"
        android:background="@color/white" />

</LinearLayout>
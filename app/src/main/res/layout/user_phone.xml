<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/layout_corner_c1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_phone_android_24"
        app:tint="@color/black"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/profile_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+82 10-1234-5678"
        android:textSize="15dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/profile_phone_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/user_btn1"
        android:layout_gravity="right"
        android:textColor="@color/black"
        android:backgroundTint="#D9D9D9"
        android:layout_margin="5dp"/>


</androidx.appcompat.widget.Toolbar>
